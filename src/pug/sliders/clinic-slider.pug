mixin slide-lg(img)
  .clinic-slider-lg__item.swiper-slide(style="background-image: url('assets/img/sliders/clinics/" + img + ".jpg')")
    .container
      .row
        .col-12
          h2.clinic-slider-lg__title.h2 Modern and innovative <span>Dental Clinic</span>

mixin slide-sm(text)
  .clinic-slider-sm__item.swiper-slide
    h4.h4.clinic-slider-sm__text #{text}
    .swiper-pagination-bullet


//BEGIN clinic-slider
.clinic-slider
