  #clinic-slider-lg.clinic-slider-lg
    .swiper-wrapper
      +slide-lg('01')
      +slide-lg('02')
      +slide-lg('03')
      +slide-lg('01')
      +slide-lg('02')
      +slide-lg('03')
  //END   clinic-slider-lg

